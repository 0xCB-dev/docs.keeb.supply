{
  "name": "@hyas/doks",
  "description": "Doks theme",
  "version": "0.5.0",
  "engines": {
    "node": ">=18"
  },
  "browserslist": [
    "defaults"
  ],
  "repository": "https://github.com/h-enk/doks",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "init": "shx rm -rf .git && git init -b main",
    "create": "exec-bin node_modules/.bin/hugo/hugo new",
    "prestart": "yarn run clean",
    "dev": "exec-bin node_modules/.bin/hugo/hugo server --bind=0.0.0.0 --disableFastRender",
    "prebuild": "yarn run clean",
    "build": "exec-bin node_modules/.bin/hugo/hugo --gc --minify",
    "build:preview": "yarn run build -D -F",
    "clean": "shx rm -rf public",
    "clean:install": "shx rm -rf package-lock.json node_modules ",
    "lint": "yarn run -s lint:scripts && yarn run -s lint:styles && yarn run -s lint:markdown",
    "lint:scripts": "eslint assets/js config functions",
    "lint:styles": "stylelint \"assets/scss/**/*.{css,sass,scss,sss,less}\"",
    "lint:markdown": "markdownlint-cli2 \"*.md\" \"content/**/*.md\"",
    "lint:markdown-fix": "markdownlint-cli2-fix \"*.md\" \"content/**/*.md\"",
    "server": "exec-bin node_modules/.bin/hugo/hugo server",
    "test": "yarn run -s lint",
    "env": "env",
    "precheck": "yarn version",
    "check": "exec-bin node_modules/.bin/hugo/hugo version",
    "copy:katex-fonts": "shx cp ./node_modules/katex/dist/fonts/* ./static/fonts/",
    "postinstall": "hugo-installer --version otherDependencies.hugo --extended --destination node_modules/.bin/hugo",
    "version": "auto-changelog -p && git add CHANGELOG.md"
  },
  "devDependencies": {
    "@babel/cli": "^7.25.9",
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "@docsearch/js": "3.6.3",
    "@fullhuman/postcss-purgecss": "^5.0",
    "@hyas/images": "^0.2.3",
    "auto-changelog": "^2.5.0",
    "autoprefixer": "^10.4.20",
    "bootstrap": "^5.3.3",
    "clipboard": "^2.0",
    "eslint": "^8.57.0",
    "exec-bin": "^1.0.0",
    "highlight.js": "^11.10.0",
    "hugo-installer": "^4.0",
    "instant.page": "^5.2.0",
    "katex": "^0.16.11",
    "lazysizes": "^5.3",
    "markdownlint-cli2": "^0.12.1",
    "netlify-plugin-submit-sitemap": "^0.4.0",
    "node-fetch": "^3.3.2",
    "postcss": "^8.4.47",
    "postcss-cli": "^11.0.0",
    "purgecss-whitelister": "^2.4",
    "shx": "^0.3.4",
    "stylelint": "^16.10.0",
    "stylelint-config-standard-scss": "^13.1.0"
  },
  "otherDependencies": {
    "hugo": "0.101.0"
  },
  "dependencies": {
    "mermaid": "^11.4.0"
  }
}
